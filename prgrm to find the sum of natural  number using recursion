#include <stdio.h>
int fan(int s)
{
    if(s==0)
    {
        return 0;
    }
    else
    return (s+fan(s-1));
}
int main()
{
    int n,result;
    printf("enter the number of terms:");
    scanf("%d",&n);
    result =fan (n);
    printf("the sum of natural number is :%d",result);
    return 0;
}
